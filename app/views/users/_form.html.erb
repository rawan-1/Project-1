<%= form_for @appliance do |f| %>
<div>
<%= f.label :name %>    
<%= f.text_field :name, required: true %>
</div>
<br>
<div>
<%= f.label :image %>   
<%= f.text_field :image, required: true %>
</div>
<br>
<div>
<%= f.label :description %>   
<%= f.text_field :description, required: true %>
</div>
<br>
<%= f.submit "New Appliance"%>
<%end %>