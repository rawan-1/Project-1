  <div class="row">
    <div class="col s11 m7 l7 offset-m2 offset-l2">

    <div class="card sticky-action">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src='<%= @appliance.image %>'>
        </div>

        <div class="card-content">
        <span class="card-title activator cc"><%= @appliance.name %></span>
        </div>

        <div class="card-reveal">
        <span class="card-title ct"><%= @appliance.name %><i class="material-icons right">close</i></span><br>
        <p class="cd"><%= @appliance.description %></p>
        <p class="det">Owner: <%= link_to @appliance.provider.name, user_path(@appliance.provider) %></p>
        <p class="det">Availability: <%= @appliance.availability %></p>
        </div>

        <div class="card-action cli">
            <% if user_signed_in? && current_user.is_customer && @appliance.availability == "Available" %>
                <%= link_to 'Borrow', "/appliances/#{params[:id]}/borrow" %>
            <%end %>

            <%if user_signed_in? && current_user.is_provider && current_user.id == @appliance.provider_id %>
                <%= link_to 'Edit', "/appliances/#{@appliance.id}/edit" %>
                <%= link_to 'Remove', "/appliances/#{@appliance.id}", method: "delete" %>
            <%end %>
        </div>

    </div>

    </div>
</div>


